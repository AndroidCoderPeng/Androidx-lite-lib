<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <com.pengxh.androidx.lite.widget.CircleProgressBar
        android:id="@+id/circleProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cpb_background="@color/mainBackground"
        app:cpb_foreground="@color/purple_500"
        app:cpb_hide_text="false"
        app:cpb_ring_radius="@dimen/dp_80"
        app:cpb_ring_stroke="@dimen/dp_10"
        app:cpb_text="百分比"
        app:cpb_text_color="@color/purple_200"
        app:cpb_text_size="@dimen/sp_18" />
</LinearLayout>